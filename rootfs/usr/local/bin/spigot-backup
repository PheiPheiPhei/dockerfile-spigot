#!/bin/bash

set -euo pipefail

source /usr/local/etc/spigot.conf

function exit_with_result() {
    case "${RESULT:-}" in
        completed)
            echo-pass "Backup completed"
            ;;
        *)
            echo-fail "Failed to backup"
            ;;
    esac
}

echo-info "Starting backup..."
trap exit_with_result EXIT

BACKUP="${BACKUP_DIR}/$(date "+${BACKUP_FILE_FORMAT}")"

tar \
-cz \
-f "${BACKUP}" \
-C "${SERVER_DIR}" \
"${BACKUP_FILES[@]}"

echo-pass "${BACKUP}: Created"

# TODO rotate backup

RESULT=completed
